<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patcomp.instagramclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PhotosActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommentsActivity"
            android:label="@string/title_activity_comments" />
        <activity
            android:name=".InstagramUser"
            android:label="@string/title_activity_instagram_user" />
        <activity
            android:name=".InstagramHashTag"
            android:label="@string/title_activity_instagram_hash_tag"></activity>
    </application>

</manifest>
